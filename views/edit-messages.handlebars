<div id="messages"></div>
<script id="messageTemplate" type="text/x-handlebars-template">
\{{#each this}}
<div class="panel panel-default">
<div class="formContainer panel-body">
    <form class="form-horizontal messageContainer" role="form" 
            action="/message">
        <input type="hidden" id="messageId" name="messageId" value="\{{ messageId }}" />
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Name</label>
            
            <div class="col-sm-4">
                <input type="text" class="form-control" 
                id="fieldName" name="name" value="\{{name}}">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldMessage" class="col-sm-2 control-label">Message</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required 
                    id="fieldMessage" name="message" value="\{{message}}">
            </div>
        </div>
        <div class="form-group button-group">
<button type="submit" class="btn btn-default submit">Update Message</button>
                <button class="btn btn-default delete">Delete Message</button>
                </div>
    </form>
</div>
</div>
\{{/each}}

</script>

<script src="/js/ajax-edit.js"></script>
