
<div class="recommend">
<h1>Recommend A Song</h1>
<h3>Our company appreciates the efforts you do to contribute a piece of yourself through music</h3>
</div>

<div id="messages" class="container messages">
</div>

<script id="messageTemplate" type="text/x-handlebars-template">
\{{#each this}}
<div class="panel panel-default message-container">
<div class="panel-body message-content">
<div>\{{message}} - \{{name}}.</div>
</div>
</div>
\{{/each}}
</script>

<div class="formContainer">
    <form autocomplete="off" class="form-horizontal messageContainer" role="form" 
            action="/message" method="POST">
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" 
                id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Song Recommendation</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required 
                    id="fieldMessage" name="message">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Leave Your Song</button>
            </div>
        </div>
    </form>
</div>
<script src="/js/getMessages.js"></script>
<script src="/js/ajax-submit.js">
</script>

